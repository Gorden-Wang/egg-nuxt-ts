{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "strict": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "charset": "utf8",
    "allowJs": false,
    "pretty": true,
    "noEmitOnError": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "strictPropertyInitialization": false,
    "noFallthroughCasesInSwitch": true,
    "skipDefaultLibCheck": true,
    "inlineSourceMap": true,
    "importHelpers": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "app/nuxt/*"
      ],
      "@/*": [
        "app/nuxt/*"
      ]
    },
    "typeRoots": [
      "./types"
      ],
    "types": [
      "@types/node",
      "@nuxt/types"
    ]
  },
  "exclude": [
    "app/public/*",
    "app/views",
    "test/*",
    "node_modules*"
  ]
}